<tr>
  <input class="item-id" type="hidden" value="<%= item.id %>">
  <td class="item-row">
    <span class="item-show-section item-text"><%= item.name %></span>
    <input class="item-edit-section item-edit-input form-control" type="text" value="<%= item.name %>">
  </td>
  <td class="quantity qty-cell">
    <span class="item-show-section item-quantity"><%= item.quantity %></span>
    <input class="item-edit-section item-edit-quantity form-control" type="number" value="<%= item.quantity %>">
  </td>
  <td class="text-right table-actions">
    <!-- Show -->
    <a class="item-show-section item-edit" title="Edit">
      <%= render partial: 'shared/icons/pencil' %>
    </a>
    <a class="item-show-section item-remove" title="Delete">
      <%= render partial: 'shared/icons/trash' %>
    </a>
    <a class="item-show-section item-move" title="Move">
      <%= render partial: 'shared/icons/arrows_left_right' %>
    </a>
    <!-- Edit -->
    <a class="item-edit-section item-update text-muted">Save</a>
    <span class="item-edit-section text-muted">|</span>
    <a class="item-edit-section item-cancel text-muted">Cancel</a>
  </td>
</li>
