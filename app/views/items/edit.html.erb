<h3>Edit/Move Item</h3>

<div class="row">
  <div class="col-md-4">
    <%= form_for(@item) do |f| %>

      <% unless @item.errors.empty? %>
        <ul class="bg-danger">
          <% @item.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, required: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :quantity %>
        <%= f.number_field :quantity, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :list_id %>
        <%= f.select :list_id, @lists.pluck(:name, :id), {}, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= f.label :category_id %>
        <%= f.select :category_id, @categories.pluck(:name, :id), {}, { class: "form-control" } %>
      </div>

      <div class="form-group form-buttons">
        <%= f.submit "Save", class: "btn btn-success btn-default" %>
        <%= link_to "Cancel", list_items_path(@item.list_id), class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
