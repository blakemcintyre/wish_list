<% if @side_bar_lists.present? %>
  <ul class="list-unstyled side-lists">
  <% @side_bar_lists.each do |list| %>
    <li>
      <% if list == @list && request.path.include?('claimable') %>
        <%= list.name %>
      <% else %>
        <%= link_to list.name, list_claimable_path(list.id) %>
      <% end %>
      <% if list.current_user_edit %>
        <%= link_to image_tag('icons/pencil.svg', alt: 'Edit Items', class: 'hidden-edit-link'), list_items_path(list.id) %>
      <% end %>
    </li>
  <% end %>
  </ul>
<% end %>
