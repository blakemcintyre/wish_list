<h3>
  <% if @category.parent_category.present? %>
    Add Sub-Category for <%= @category.parent_category.name %>
  <% else %>
    Add Category
  <% end %>
</h3>

<div class="row">
  <div class="col-md-4">
    <%= form_for([@list, @category]) do |f| %>
    <%= f.hidden_field :parent_category_id %>

      <% unless @category.errors.empty? %>
        <ul class="bg-danger">
          <% @category.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" ,required: true %>
      </div>

      <div class="form-group form-buttons">
        <%= f.submit "Save", class: "btn btn-success" %>
        <%= link_to "Cancel", list_items_path(@list), class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
