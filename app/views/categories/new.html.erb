<h3>Add Category</h3>

<div class="row">
  <div class="col-md-4">
    <%= form_for(@category) do |f| %>
      <% unless @category.errors.empty? %>
        <ul class="bg-danger">
          <% @category.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" ,required: true %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: "btn btn-default" %>
        <%= link_to "Cancel", root_path, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>
