<h3>Edit/Move Category</h3>

<div class="row">
  <div class="col-md-4">
    <%= form_for(@category) do |f| %>
      <%= f.hidden_field :id %>

      <% unless @category.errors.empty? %>
        <ul class="bg-danger">
          <% @category.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, required: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :list_id %>
        <%= f.select :list_id, @lists.pluck(:name, :id), {}, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= f.label :parent_category_id %>
        <%= f.select :parent_category_id, @parent_categories_in_list.pluck(:name, :id), { include_blank: true }, { class: "form-control" } %>
      </div>

      <div class="form-group form-buttons">
        <%= f.submit "Save", class: "btn btn-success btn-secondary" %>
        <%= link_to "Cancel", list_items_path(@category.list_id), class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
