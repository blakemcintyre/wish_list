<h3>My Wish List</h3>
<div class="row">
  <div class="col-md-8">
    <table id="list-items" class="table table-condensed table-hover">
      <tbody>
        <%= render @items %>
        <tr>
          <td colspan="2">
            <input type="text" id="add-item" class="form-control" placeholder="Add an item">
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<table id="item-template" class="hidden">
  <tbody>
    <%= render partial: 'items/item', locals: { item: Item.new } %>
  </tbody>
</table>
