<h3>My Wish List</h3>
<div class="row">
  <div class="col-md-8">
    <% @categories.each do |category| %>
      <%= render partial: 'lists/category_group', locals: { category: category, items: @grouped_items[category.id] } %>
    <% end %>
    <input type="text" id="add-category" class="form-control" placeholder="Add an category">
  </div>
</div>
<table id="item-template" class="hidden">
  <tbody>
    <%= render partial: 'items/item', locals: { item: Item.new } %>
  </tbody>
</table>
